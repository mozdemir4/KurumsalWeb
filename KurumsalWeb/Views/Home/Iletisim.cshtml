
@{
    ViewBag.Title = "Iletisim";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<section id="inner-headline">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="breadcrumb">
                    <li><a href="#"><i class="fa fa-home"></i></a><i class="icon-angle-right"></i></li>
                    <li class="active">Contact</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section id="content">
    <div class="map">
        <!--<div id="google-map" data-latitude="40.713732" data-longitude="-74.0092704"></div>-->
        <iframe src="https://www.google.com/maps/embed?pb=!1m23!1m12!1m3!1d12083.80253787037!2d29.382789827225693!3d40.78509941625811!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!4m8!3e6!4m5!1s0x14cadfc06d8fe38b%3A0x9a64e51de50cd123!2zU8SxcmEgU8O2xJ_DvHRsZXIgTWFoYWxsZXNpLCBTxLFyYXPDtsSfw7x0bGVyIENhZGRlc2ksIDQxNzAwIERhcsSxY2EvS29jYWVsaSwgVMO8cmtpeWU!3m2!1d40.7850835!2d29.3915446!4m0!5e0!3m2!1str!2str!4v1633103780647!5m2!1str!2str" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <h4>İlgili kısmı doldurarak bizimle iletişime geçiniz, <strong>İlgili kısım aşağıdadır.</strong></h4>
              
                <form action="/Home/Iletisim" method="post" role="form" class="contactForm">
                    <div class="form-group">
                        <input type="text" name="Gonderen" class="form-control" id="name" placeholder="Adınız ve Soyadınız" data-rule="minlen:4" required data-msg="Please enter at least 4 chars" />
                        <div class="validation"></div>
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" name="Mail" id="email" placeholder="Mail Adresiniz" data-rule="email" required data-msg="Please enter a valid email" />
                        <div class="validation"></div>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="Konu" id="subject" placeholder="Konu" data-rule="minlen:4" required data-msg="Please enter at least 8 chars of subject" />
                        <div class="validation"></div>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="Mesaj" rows="5" data-rule="required" data-msg="Please write something for us" required placeholder="Mesajınız"></textarea>
                        <div class="validation"></div>
                    </div>
                    @{
                        if (ViewBag.uyari == "Mesajınız başarıyla gönderilmiştir.")
                        {
                            <div class="alert alert-info">@ViewBag.uyari</div>
                        }

                    }
                    <div class="text-center"><button type="submit" class="btn btn-theme">Gönder</button></div>
                </form>
            </div>
        </div>
    </div>
</section>
