<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title - @ViewBag.kimlik.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="@Html.Raw(ViewBag.kimlik.Description)" />
    <meta name="keywords" content="@ViewBag.kimlik.Keywords"/>
    <!-- css -->
    <link href="~/Content/Onyuz/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Onyuz/css/fancybox/jquery.fancybox.css" rel="stylesheet">
    <link href="~/Content/Onyuz/css/jcarousel.css" rel="stylesheet" />
    <link href="~/Content/Onyuz/css/flexslider.css" rel="stylesheet" />
    <link href="~/Content/Onyuz/css/style.css" rel="stylesheet" />

    <!-- Theme skin -->
    <link href="~/Content/Onyuz/skins/default.css" rel="stylesheet" />

    <!-- =======================================================
    Theme Name: Moderna
    Theme URL: https://bootstrapmade.com/free-bootstrap-template-corporate-moderna/
    Author: BootstrapMade
    Author URL: https://bootstrapmade.com
    ======================================================= -->

</head>

<body>
    <div id="wrapper">
        <!-- start header -->
        <header>
            <div class="navbar navbar-default navbar-static-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="/AnaSayfa"><img src="@ViewBag.kimlik.LogoURL" style="padding-bottom:10px" width="50" height="40" class="img-responsive"/>@ViewBag.kimlik.Unvan</a>
                    </div>
                    <div class="navbar-collapse collapse ">
                        <ul class="nav navbar-nav">
                            <li class="active"><a href="/AnaSayfa">Ana Sayfa</a></li>
                            @*<li class="dropdown">
                                    <a href="#" class="dropdown-toggle " data-toggle="dropdown" data-hover="dropdown" data-delay="0" data-close-others="false">Webde Biz <b class=" icon-angle-down"></b></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="/Home/Hakkimizda/">Hakkımızda</a></li>
                                        <li><a href="/Home/Hizmetlerimiz/">Hizmetlerimiz</a></li>
                                    </ul>
                                </li>*@
                            <li><a href="/Hakkimizda">Hakkımızda</a></li>
                            <li><a href="/Hizmetler">Hizmetlerimiz</a></li>
                            <li><a href="/BlogPost">Blog</a></li>
                            <li><a href="/Iletisim">İletişim</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>
        <!-- end header -->
        @RenderBody()
        
        @Html.Action("FooterPartial","Home")
    </div>
    <a href="#" class="scrollup"><i class="fa fa-angle-up active"></i></a>
    <!-- javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="~/Content/Onyuz/js/jquery.js"></script>
    <script src="~/Content/Onyuz/js/jquery.easing.1.3.js"></script>
    <script src="~/Content/Onyuz/js/bootstrap.min.js"></script>
    <script src="~/Content/Onyuz/js/jquery.fancybox.pack.js"></script>
    <script src="~/Content/Onyuz/js/jquery.fancybox-media.js"></script>
    <script src="~/Content/Onyuz/js/google-code-prettify/prettify.js"></script>
    <script src="~/Content/Onyuz/js/portfolio/jquery.quicksand.js"></script>
    <script src="~/Content/Onyuz/js/portfolio/setting.js"></script>
    <script src="~/Content/Onyuz/js/jquery.flexslider.js"></script>
    <script src="~/Content/Onyuz/js/animate.js"></script>
    <script src="~/Content/Onyuz/js/custom.js"></script>

</body>

</html>
