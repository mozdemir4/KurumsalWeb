@model IEnumerable<KurumsalWeb.Models.Model.Hizmetler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hizmetler</h2>
@Html.ActionLink("Ekle", "Ekle")
<table class="table table-hover">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>ResimURL</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Baslik</td>
                <td style="width:40%">@Html.Raw(x.Aciklama)</td>
                <td><img width="300" height="250" src="@x.ResimURL" class="img-responsive" /></td>
                <td>
                    @Html.ActionLink("Güncelle","Guncelle", new { id=x.HizmetID}) |
                    @Html.ActionLink("Sil","Sil", new { id=x.HizmetID})
                </td>
            </tr>
        }
    </tbody>
</table>
