@model KurumsalWeb.Models.Model.Blog
@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script type="text/javascript">
    CKEDITOR.replace('editor')
</script>
<h2>Blog Güncelleme Sayfası</h2>

@using (Html.BeginForm("Guncelle", "Blog", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
<div class="form">
     @Html.HiddenFor(x=>x.BlogID)
    <div class="form-group ">
        <label for="cname" class="control-label col-lg-2">Başlık <span class="required">*</span></label>
        <div class="col-lg-10">
            <input class="form-control" value="@Model.Baslik" id="Baslik" name="Baslik" minlength="5" type="text" required />
        </div>
    </div>
    <div class="form-group ">
        <label for="cemail" class="control-label col-lg-2">Kategori <span class="required">*</span></label>
        <div class="col-lg-10">

            @Html.DropDownListFor(x => x.Kategoriid, (List<SelectListItem>)ViewBag.deger, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group ">
        <label for="cemail" class="control-label col-lg-2">İçerik <span class="required">*</span></label>
        <div class="col-lg-10">
            <textarea name="Icerik" class="ckeditor">@Model.Icerik</textarea>
        </div>
    </div>
    <div class="form-group ">
        <label for="curl" class="control-label col-lg-2">Önceki Resim</label>
        <div class="col-lg-10">
            <img src="@Model.ResimURL" width="250" height="250"/>
        </div>
    </div>
    <div class="form-group ">
        <label for="curl" class="control-label col-lg-2">Resim</label>
        <div class="col-lg-10">
            <input  class="form-control " id="curl" type="file" name="ResimURL" accept=".jpg,.png,.jpeg" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10">
            <button class="btn btn-primary" type="submit">Güncelle</button>
            <a href="/Blog/Index/"><button class="btn btn-default" type="button">İptal</button></a>
        </div>
    </div>

</div>
}
